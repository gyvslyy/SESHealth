<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group2.seshealthpatient">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/home"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.RegisterActivity" />
        <activity android:name=".Activities.ViewUploadActivity" />
        <activity android:name=".Activities.DoctorListActivity" />
        <activity android:name=".Activities.DoctorProfileActivity" />
        <activity android:name=".Activities.DocDetail" />
        <activity android:name=".Activities.DoctorLogin" />
        <activity
            android:name=".Activities.DoctorMainActivity"
            android:label="@string/title_activity_doctor_main"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.PatientListActivity" />
        <activity android:name=".Activities.PatientDetailActivity" />
        <activity android:name=".Activities.ViewDataPacketActivity" />
        <activity android:name=".Activities.DataPacketDetailActivity" />
        <activity android:name=".Activities.RequestActivity" />
        <activity android:name=".Activities.Feedback" />
        <activity android:name=".Activities.DetailActivity" />
        <activity android:name=".Activities.HeartbeatMainActivity" />
        <activity android:name=".Activities.GraphActivity" />
        <activity android:name=".Activities.PatientViewDataPacketActivity" />
        <activity android:name=".Activities.ViewHeartRateActivity"></activity>
    </application>

</manifest>