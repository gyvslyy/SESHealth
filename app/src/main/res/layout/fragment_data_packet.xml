<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group2.seshealthpatient.Fragments.DataPacketFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
      android:orientation="vertical">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="62dp"
         android:textSize="20dp" />


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:orientation="horizontal"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp">
         <TextView
             android:layout_width="70dp"
             android:layout_height="match_parent"
             android:text="Title: "
             android:textSize="25dp"
             android:layout_gravity="center"/>
         <EditText
             android:id="@+id/DPTitle"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textSize="15dp"
             android:hint="(Please enter a title)"
             />
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:orientation="horizontal"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp">
         <TextView
             android:layout_width="70dp"
             android:layout_height="match_parent"
             android:text="Time: "
             android:textSize="25dp"
             android:layout_gravity="center"/>
         <TextView
             android:id="@+id/DPTime"
             android:hint="Display until comfirm"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textSize="25dp"
             />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="231dp"
         android:orientation="vertical">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="201dp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginTop="15dp"
             android:background="@drawable/edittext_edge">

             <EditText
                 android:id="@+id/DPEditField"
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:background="@null"
                 android:gravity="top"
                 android:hint="Optional comments"
                 android:maxLength="200"
                 android:textSize="15sp" />

             <TextView
                 android:id="@+id/edt_tv_num"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="5dp"
                 android:text="0/200" />

         </RelativeLayout>
     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:orientation="horizontal"
         android:layout_marginRight="15dp">

         <TextView
             android:id="@+id/choosedFileTv"
             android:layout_width="200dp"
             android:layout_height="match_parent"
             android:textSize="25sp" />


         <TextView
             android:layout_width="50dp"
             android:layout_height="match_parent"
             android:background="@drawable/ic_attachment_black_24dp"/>

         <Button
             android:id="@+id/AttachFilesBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:background="@color/grey"
             android:text="Attach files"
             android:textSize="15sp" />

     </LinearLayout>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="20dp" />

     <Button
        android:id="@+id/DPCreateBtn"
         android:layout_width="180dp"
         android:layout_height="40dp"
         android:background="@drawable/blue_round_corner_btn"
         android:textColor="@color/whiteColor"
         android:textSize="18sp"
        android:layout_gravity="center"
        android:text="Create!"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="10dp" />

     <Button
         android:id="@+id/ViewHistoryBtn"
         android:layout_width="180dp"
         android:layout_height="40dp"
         android:background="@drawable/blue_round_corner_btn"
         android:textColor="@color/whiteColor"
         android:textSize="18sp"
         android:layout_gravity="center"
         android:text="View History"/>


 </LinearLayout></ScrollView>

</FrameLayout>
