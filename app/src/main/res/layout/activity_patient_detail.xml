<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PatientDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/back">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/app_bar_layout" android:id="@+id/patient_detail_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <ListView
                android:id="@+id/PatientDetailListView"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="@color/whiteColor">

            </ListView>
        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/ViewDatapacket"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/round_corner_btn"
            android:textSize="12dp"
            android:text="View Packet"
            android:textStyle="bold"
            android:textColor="@color/whiteColor" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
            android:id="@+id/feedbackBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:background="@drawable/round_corner_btn"
            android:textColor="@color/whiteColor"
            android:text="Add Feedback" />


        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent" />

            <Button
                android:id="@+id/ViewHRBtn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="View Heartbeat"
                android:background="@drawable/round_corner_btn"
                android:textColor="@color/whiteColor"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="546dp" />
    </LinearLayout>

   </LinearLayout>


</android.support.constraint.ConstraintLayout>